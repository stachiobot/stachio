# ================================
# Database Configuration
# ================================
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DATABASE"

# ================================
# Dashboard Configuration
# ================================
DASHBOARD_PORT=80
DASHBOARD_DOMAIN="http://localhost"
DASHBOARD_REDIRECT_URI="/discord/callback"
DASHBOARD_LICENSE="YOUR-LICENSE-KEY"

# ================================
# Main Client Bot
# ================================
CLIENT_TOKEN="YOUR-CLIENT-TOKEN"
CLIENT_ID="YOUR-CLIENT-ID"
CLIENT_SECRET="YOUR-CLIENT-SECRET"
CLIENT_PREFIX="?"

# ================================
# Helper Bot (optional)
# ================================
HELPER_CLIENT_TOKEN="YOUR-CLIENT-TOKEN"
HELPER_CLIENT_ID="YOUR-CLIENT-ID"
HELPER_CLIENT_SECRET="YOUR-CLIENT-SECRET"
HELPER_CLIENT_PREFIX="?"

# ================================
# Error & Logging
# ================================
ENABLE_ERROR_HANDLER=true
ENABLE_SEND_TO_WEBHOOK=true
ERROR_WEBHOOK_URL="YOUR-WEBHOOK-URL"
